@model Employee

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Create Employee</title>

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" />
	<style>
		.container {
			margin-top: 50px;
		}

		.card {
			border-radius: 10px;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		}

		.card-header {
			background-color: cyan;
			color: darkblue;
			font-size: 24px;
			font-weight: bold;
			text-align: center;
		}

		.form-group label {
			font-weight: bold;
		}

		.btn-primary {
			margin-top: 10px;
		}

		.img-preview {
			max-height: 300px;
			object-fit: cover;
			border-radius: 10px;
		}
	</style>
</head>
<body>
	<div class="container">
		<div class="card col-md-6 offset-md-3">
			<div class="card-header">
				Create Employee
			</div>
			<div class="card-body">
				<form method="post" asp-controller="Employees" asp-action="AddNew" enctype="multipart/form-data">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="form-group">
						<label asp-for="FullName">Full Name</label>
						<input type="text" asp-for="FullName" class="form-control" />
						<span asp-validation-for="FullName" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label asp-for="Position">Position</label>
						<input type="text" asp-for="Position" class="form-control" />
						<span asp-validation-for="Position" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label asp-for="Salary">Salary</label>
						<input type="number" asp-for="Salary" step="0.01" class="form-control" />
						<span asp-validation-for="Salary" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label asp-for="BirthDate">Birth Date</label>
						<input asp-for="BirthDate" class="form-control" />
						<span asp-validation-for="BirthDate" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label asp-for="JoinData">Join Date</label>
						<input asp-for="JoinData" class="form-control" />
						<span asp-validation-for="JoinData" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label asp-for="ImageUrl">Profile Image</label>
						<input type="file" name="imageFile" id="imageFile" accept=".png,.jpg" onchange="AddImage()" class="form-control" />
						<span asp-validation-for="ImageUrl" class="text-danger"></span>
					</div>

					<div class="form-group">
						<label asp-for="DepartmentId">Department</label>
						<select asp-for="DepartmentId" class="form-control" asp-items="@ViewBag.DeptSelectItems">
							<option selected disabled>Select...</option>
						</select>
					</div>

					<button type="submit" class="btn btn-primary">Add</button>
					<a asp-controller="Employees" asp-action="GetIndexView" class="btn btn-link">Back to List</a>
				</form>
			</div>
		</div>

		<div class="col-md-6 offset-md-3 mt-3">
			<img src="" id="empImage" class="img-preview" />
		</div>
	</div>

	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
	<script>
		function AddImage() {
			document.getElementById('empImage').src = window.URL.createObjectURL(document.getElementById('imageFile').files[0]);
		}
	</script>
</body>
</html>