@model IEnumerable<Employee>
<h1 style="background-color:lightblue;color:orange " class="alert alert-info text-center">
	Welcome to home!!</h1>
<br />
<a asp-controller="Employees"
	asp-action="GetCreateView"
	class="btn btn-success mb-1">
	Create New..!</a>
<br/>
<br />
@if (Model.Count()> 0)
{
	<table class="table table-bordered table-striped table-hover">
		<thead>
			<tr>
				<th>@Html.DisplayNameFor(e=>e.Id)</th>
				<th>@Html.DisplayNameFor(e=>e.FullName)</th>
				<th>@Html.DisplayNameFor(e=>e.Position)</th>
				<th>@Html.DisplayNameFor(e=>e.Salary)</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.FullName</td>
					<td>@item.Position</td>
					<td>@item.Salary</td>
					<td>	
						<a asp-controller="Employees"
						   asp-action="GetDetailsView"
						   asp-route-id="@item.Id"
						   class="btn btn-outline-success"
						   title="Details">
							<i class="bi bi-list-ul"></i>

						</a>

						<a asp-controller="Employees"
						   asp-action="GetEditView"
						   asp-route-id="@item.Id"
						   class="btn btn-outline-warning"
						   title="Edit">
							<i class="bi bi-pencil-square"></i>

						</a>

						<a asp-controller="Employees"
						   asp-action="GetDeleteView"
						   asp-route-id="@item.Id"
						   class="btn btn-outline-danger"
						   title="Delete">
							<i class="bi bi-trash"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>
		<tfoot>
			
			<tr>
				<th colspan="3" style="text-align:right">Total</th>
				<td>@Model.Sum(e=>e.Salary)</td>
			</tr>
		</tfoot>
	</table>
}
else
{
	<h1 class="alert alert-danger text-center">There is no date</h1>
}




