@model Employee

<h1 style="background-color:cyan;color:darkblue"
	class=" alert alert-info display-1 text-center">
	Edit for @Model.FullName.....
</h1>
<br />
<div class="row">
	<form method="post" class="col-4" asp-action="EditCurrent"
		  asp-controller="Employees"enctype="multipart/form-data">

		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<input type="hidden" asp-for="Id"/>
		<input type="hidden" asp-for="ImageUrl" />

		<div>
			@*<label>@Html.DisplayNameFor(e=>e.FullName)</label>*@
			<label asp-for="FullName"></label>
			<input type="text" asp-for="FullName" class="form-control" />
			<span asp-validation-for="FullName" class="text-danger"> </span>
		</div>

		<div>
			@*<label>@Html.DisplayNameFor(e=>e.Position)</label>*@
			<label asp-for="Position"></label>
			<input type="text" asp-for="Position" class="form-control" />
			<span asp-validation-for="Position" class="text-danger"> </span>

		</div>

		<div>
			@*<label>@Html.DisplayNameFor(e=>e.Salary)</label>*@
			<label asp-for="Salary"></label>
			<input type="number" asp-for="Salary" step="0.01" class="form-control" />
			<span asp-validation-for="Salary" class="text-danger"> </span>
		</div>

		<div>
			@*<label>@Html.DisplayNameFor(e=>e.BirthDate)</label>*@
			<label asp-for="BirthDate"></label>
			<input asp-for="BirthDate" class="form-control" />
			<span asp-validation-for="BirthDate" class="text-danger"> </span>
		</div>

		<div>
			@*<label>@Html.DisplayNameFor(e=>e.JoinData)</label>*@
			<label asp-for="JoinData"></label>
			<input asp-for="JoinData" class="form-control" />
			<span asp-validation-for="JoinData" class="text-danger"> </span>
		</div>

		<div>
			<label asp-for="ImageUrl"></label>
			<input type="file" name="imageFile" id="imageFile" accept=".png,.jpg" onchange="AddImage()" class="form-control" />
			<span asp-validation-for="ImageUrl" class="text-danger"></span>
		</div>

		<div>
			<label asp-for="DepartmentId"></label>
			<select asp-for="DepartmentId" class="form-control" asp-items="@ViewBag.DeptSelectItems">
				<option selected disabled>Select...</option>
			</select>
		</div>

		<div>
			<button type="submit" class="btn-primary mt-1">Edit</button>
			<a asp-controller="Employees" asp-action="GetIndexView">Back to List</a>
		</div>
	</form>
	<div class="col-6">
		<img src="@Model.ImageUrl" id="empImage" style="width:50%;aspect-ratio:1/1" />
	</div>
</div>

@section Scripts{
	<script>
		function AddImage() {
			document.getElementById('empImage').src = window.URL.createObjectURL(document.getElementById('imageFile').files[0]);
		}
	</script>
}