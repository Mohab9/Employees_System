@model Department

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@Model.Description's Details</title>

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" />
	<style>
		.container {
			margin-top: 50px;
		}

		.card {
			border-radius: 10px;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		}

		.card-header {
			background-color: #007bff;
			color: #fff;
			font-size: 24px;
			font-weight: bold;
			text-align: center;
		}

		.details-container {
			padding: 20px;
		}

			.details-container h3 {
				margin-bottom: 20px;
			}

			.details-container dl {
				display: grid;
				grid-template-columns: repeat(2, minmax(0, 1fr));
				grid-gap: 15px;
				margin-bottom: 30px;
			}

			.details-container dt {
				font-weight: bold;
			}

			.details-container dd {
				margin-left: 0;
			}

		.employee-list {
			margin-top: 30px;
		}

			.employee-list .alert {
				margin-top: 20px;
			}
	</style>
</head>
<body>
	<div class="container">
		<div class="card">
			<div class="card-header">
				<h1 class="mb-0">@Model.Description's Details</h1>
			</div>
			<div class="details-container">
				<h3>Department Details</h3>
				<dl class="row">
					<dt class="col-sm-4">Id</dt>
					<dd class="col-sm-8">@Html.DisplayFor(e => e.Id)</dd>

					<dt class="col-sm-4">Name</dt>
					<dd class="col-sm-8">@Html.DisplayFor(e => e.Name)</dd>

					<dt class="col-sm-4">Description</dt>
					<dd class="col-sm-8">@Html.DisplayFor(e => e.Description)</dd>
				</dl>

				<div class="employee-list">
					<h3>Department Employees</h3>
					@if (Model.Employees.Count > 0)
					{
						<ul class="list-group">
							@foreach (var item in Model.Employees)
							{
								<li class="list-group-item">@item.FullName (@item.Position)</li>
							}
						</ul>
					}
					else
					{
						<div class="alert alert-danger">There are no employees in this department.</div>
					}
				</div>
			</div>
		</div>
	</div>

	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>