@model Department

<h1 style="background-color:cyan;color:darkblue"
	class=" alert alert-info display-1 text-center">
	Add New Department
</h1>
<br />
<div class="row">
	<form method="post" class="col-4"
		  asp-controller="Departments" asp-action="AddNew" enctype="multipart/form-data">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div>
			@*<label>@Html.DisplayNameFor(e=>e.Name)</label>*@
			<label asp-for="Name"></label>
			<input type="text" asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"> </span>
		</div>

		<div>
			@*<label>@Html.DisplayNameFor(e=>e.Description)</label>*@
			<label asp-for="Description"></label>
			<input type="text" asp-for="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"> </span>

		</div>


		<div>
			<button type="submit" class="btn-primary mt-1">Add</button>
			<a asp-controller="Departments" asp-action="GetIndexView">Back to List</a>
		</div>
	</form>

</div>